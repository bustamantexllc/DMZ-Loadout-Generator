<script>
/**
 * DMZ-feeling pool (starter set).
 * You can expand weapons later; UX stays the same.
 * NOTE: DMZ overlaps with MWII equipment; this pool focuses on items that "feel DMZ" as a kit.
 */

const POOLS = {
  Primary: [
    // Curated, expandable
    "TAQ-56 (AR)", "M4 (AR)", "Kastov 762 (AR)", "Chimera (AR)", "ISO Hemlock (AR)",
    "Lachmann Sub (SMG)", "Fennec 45 (SMG)", "Vaznev-9K (SMG)", "BAS-P (SMG)",
    "Bryson 800 (Shotgun)", "KV Broadside (Shotgun)",
    "RPK (LMG)", "Sakin MG38 (LMG)",
    "TAQ-V (BR)", "Lachmann-762 (BR)",
    "SP-R 208 (Marksman)", "SA-B 50 (Marksman)",
    "Victus XMR (Sniper)", "MCPR-300 (Sniper)"
  ],
  Secondary: [
    "X13 Auto (Pistol)", "P890 (Pistol)", "X12 (Pistol)", "Basilisk (Pistol)",
    "PILA (Launcher)", "JOKR (Launcher)", "Strela-P (Launcher)",
    "Combat Knife (Melee)"
  ],
  Tactical: [
    "Smoke Grenade", "Stun Grenade", "Snapshot Grenade", "Spotter Scope",
    "Flash Grenade", "Heartbeat Sensor"
  ],
  Lethal: [
    "Semtex", "Drill Charge", "Frag Grenade", "Molotov", "Throwing Knife", "C4"
  ],
  FieldUpgrade: [
    "Munitions Box", "Armor Box", "Trophy System", "Dead Silence"
  ],
  Vest: [
    "2-Plate Vest", "3-Plate Vest", "3-Plate Comms Vest", "3-Plate Medic Vest", "3-Plate Stealth Vest"
  ],
  Backpack: [
    "Small Backpack", "Medium Backpack", "Large Backpack"
  ],
  Killstreak: [
    "UAV", "Precision Airstrike", "Mortar Strike", "Advanced UAV"
  ],
  Revive: [
    "Self-Revive Kit", "Revive Pistol"
  ],
  Mask: [
    "Gas Mask", "Durable Gas Mask", "Radiation Blocker"
  ],
  Extra: [
    "Stronghold Keycard", "Armor Plates (extra stack)", "Ammo (extra stack)", "Cash Goal: $20k",
    "Contract Focus: Secure Intel", "Contract Focus: HVT", "Contract Focus: Safecracker"
  ]
};

const ORDER = [
  "Primary","Secondary","Tactical","Lethal","FieldUpgrade",
  "Vest","Backpack","Killstreak","Revive","Mask","Extra"
];

const state = {
  locks: {},
  values: {},
  regain:false,
  hard:false,
  oneWeapon:false,
  seed: null,
  focusedKey: null
};

const elSlots = document.getElementById("slots");
const elHeadline = document.getElementById("headline");
const elSeed = document.getElementById("seedLabel");
const toast = document.getElementById("toast");

function showToast(msg){
  toast.textContent = msg;
  toast.classList.add("show");
  setTimeout(()=>toast.classList.remove("show"), 1300);
}

function loadLocks(){
  try{
    const raw = localStorage.getItem("dmz_locks");
    if(raw) state.locks = JSON.parse(raw);
  }catch{}
}
function saveLocks(){
  try{
    localStorage.setItem("dmz_locks", JSON.stringify(state.locks));
  }catch{}
}

function randSeed(){
  // short seed for shareability
  return Math.random().toString(36).slice(2, 8).toUpperCase();
}

function pick(arr){
  return arr[Math.floor(Math.random()*arr.length)];
}

// simple weighting helpers
function weightedPick(options){
  // options: [{v, w}]
  const total = options.reduce((s,o)=>s+o.w,0);
  let r = Math.random()*total;
  for(const o of options){
    r -= o.w;
    if(r<=0) return o.v;
  }
  return options[options.length-1].v;
}

function poolForKey(key){
  // apply mode logic without getting overly complex
  let arr = [...POOLS[key]];

  if(state.hard){
    if(key === "Killstreak") arr = arr.filter(v => v !== "Advanced UAV");
    if(key === "Mask") arr = arr.filter(v => v !== "Durable Gas Mask");
  }

  if(state.regain){
    if(key === "Vest") arr = ["2-Plate Vest","3-Plate Vest"];
    if(key === "Backpack") arr = ["Small Backpack","Medium Backpack"];
    if(key === "Killstreak") arr = ["UAV","Precision Airstrike","Mortar Strike"];
  }

  if(state.oneWeapon){
    if(key === "Secondary") arr = ["None (empty slot)","Combat Knife (Melee)"];
  }

  return arr;
}

function generate(){
  state.seed = randSeed();
  elSeed.textContent = `Seed: ${state.seed}`;

  for(const key of ORDER){
    if(state.locks[key]) continue;
    const arr = poolForKey(key);

    // tiny extra weighting for ‚ÄúDMZ vibe‚Äù
    if(key === "Tactical"){
      // smoke/spotter are very DMZ-feeling
      state.values[key] = weightedPick([
        {v:"Smoke Grenade", w: state.regain ? 4 : 3},
        {v:"Spotter Scope", w: 3},
        {v: pick(arr), w: 6}
      ]);
    } else if(key === "Revive"){
      // self-revive more common than revive pistol
      state.values[key] = weightedPick([
        {v:"Self-Revive Kit", w: 8},
        {v:"Revive Pistol", w: 2}
      ]);
    } else {
      state.values[key] = pick(arr);
    }
  }

  // headline
  const style = state.regain ? "Regain" : (state.hard ? "Hard" : "Standard");
  elHeadline.textContent = `${style} Kit ‚Ä¢ ${state.seed}`;
  render();
}

function slotHTML(key){
  const locked = !!state.locks[key];
  const value = state.values[key] ?? "‚Äî";
  return `
    <div class="slot" tabindex="0" data-key="${key}">
      <div class="slotTop">
        <div class="label">${key}</div>
        <button class="lockBtn" data-key="${key}" data-locked="${locked}">
          ${locked ? "üîí Locked" : "üîì Lock"}
        </button>
      </div>
      <div class="value" id="val_${key}">${value}</div>
    </div>
  `;
}

function render(){
  elSlots.innerHTML = ORDER.map(slotHTML).join("");

  // attach lock handlers + focus tracking
  elSlots.querySelectorAll(".lockBtn").forEach(btn=>{
    btn.addEventListener("click", (e)=>{
      e.stopPropagation();
      const k = btn.dataset.key;
      state.locks[k] = !state.locks[k];
      saveLocks();
      showToast(state.locks[k] ? `${k} locked` : `${k} unlocked`);
      render();
    });
  });

  elSlots.querySelectorAll(".slot").forEach(slot=>{
    slot.addEventListener("focus", ()=> state.focusedKey = slot.dataset.key);
    slot.addEventListener("click", ()=> slot.focus());
  });
}

function toText(){
  const lines = [];
  lines.push(`DMZ RANDOM KIT ‚Äî ${state.seed ?? "‚Äî"}`);
  for(const key of ORDER){
    lines.push(`${key}: ${state.values[key] ?? "‚Äî"}${state.locks[key] ? " (locked)" : ""}`);
  }
  if(state.regain) lines.push("Mode: Regain Run");
  if(state.hard) lines.push("Mode: Hard Mode");
  if(state.oneWeapon) lines.push("Mode: One-Weapon");
  return lines.join("\n");
}

async function copy(){
  const text = toText();
  try{
    await navigator.clipboard.writeText(text);
    showToast("Copied to clipboard");
  }catch{
    // fallback
    const ta = document.createElement("textarea");
    ta.value = text;
    document.body.appendChild(ta);
    ta.select();
    document.execCommand("copy");
    ta.remove();
    showToast("Copied");
  }
}

async function share(){
  const text = toText();
  const payload = { title: "DMZ Random Kit", text };
  if(navigator.share){
    try{
      await navigator.share(payload);
      return;
    }catch{}
  }
  await copy();
  showToast("Share not available ‚Äî copied instead");
}

function bindSwitch(id, key){
  const el = document.getElementById(id);
  el.addEventListener("click", ()=>{
    state[key] = !state[key];
    el.dataset.on = state[key] ? "true" : "false";
    el.setAttribute("aria-checked", state[key] ? "true" : "false");
    // reroll immediately for snappy UX
    generate();
  });
}

document.getElementById("rollBtn").addEventListener("click", generate);
document.getElementById("copyBtn").addEventListener("click", copy);
document.getElementById("shareBtn").addEventListener("click", share);

bindSwitch("regainSwitch", "regain");
bindSwitch("hardSwitch", "hard");
bindSwitch("oneWeaponSwitch", "oneWeapon");

window.addEventListener("keydown", (e)=>{
  if(e.key.toLowerCase() === "r"){
    generate();
  }
  if(e.key.toLowerCase() === "l" && state.focusedKey){
    state.locks[state.focusedKey] = !state.locks[state.focusedKey];
    saveLocks();
    showToast(state.locks[state.focusedKey] ? `${state.focusedKey} locked` : `${state.focusedKey} unlocked`);
    render();
  }
});

// init
loadLocks();
render();
</script>
</body>
</html>
