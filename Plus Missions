<script>
const loadout={
Primary:["M4","TAQ-56","ISO Hemlock","Kastov 762"],
Secondary:["X13 Auto","P890","Combat Knife"],
Tactical:["Smoke","Stun","Spotter Scope"],
Lethal:["Semtex","Drill Charge","Frag"],
Vest:["2-Plate","3-Plate"],
Backpack:["Small","Medium","Large"]
};

const missions={
easy:["Complete 1 contract","Extract $20k","Clear 1 Stronghold"],
normal:["Complete 2 contracts","Extract $30k","Loot locked space"],
spicy:["Complete 3 contracts","Clear 2 Strongholds","Extract $40k"]
};

function rand(a){return a[Math.floor(Math.random()*a.length)]}

function roll(){
  const seed=Math.random().toString(36).slice(2,8).toUpperCase();
  document.getElementById("seed").textContent="Seed: "+seed;
  document.getElementById("headline").textContent="Good luck";

  const grid=document.getElementById("grid");
  grid.innerHTML="";

  Object.keys(loadout).forEach(k=>{
    grid.innerHTML+=`<div class="slot"><div class="label">${k}</div><div class="value">${rand(loadout[k])}</div></div>`;
  });

  const diff=document.getElementById("difficulty").value;
  grid.innerHTML+=`<div class="slot"><div class="label">Mission</div><div class="value">${rand(missions[diff])}</div></div>`;
}

function copy(){
  let t="DMZ LOADOUT\n";
  document.querySelectorAll(".slot").forEach(s=>t+=s.innerText+"\n");
  navigator.clipboard.writeText(t);
}
roll();
</script>
